<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.HomePageBodyActivity">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/app_logo" />

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="148dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_system_button"
        android:gravity="center"
        android:onClick="changePasswordFunction"
        android:text="@string/change_password" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_system_button"
        android:gravity="center"
        android:onClick="logoutFunction"
        android:text="@string/logout" />

    <ImageView
        android:id="@+id/bt_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:onClick="showBTInfo"
        android:src="@drawable/watch"
        android:textColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="468dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="78dp">

        <TextView
            android:id="@+id/good_evening_textView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/good_evening_textView"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/new_body" />

        <Button
            android:id="@+id/neck_btn"
            android:layout_width="74dp"
            android:layout_height="75dp"
            android:layout_below="@+id/good_evening_textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="168dp"
            android:layout_marginLeft="167dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="302dp"
            android:background="@android:color/transparent"
            android:onClick="goToQuestionnaireByCategory"
            android:tag="Neck" />

        <Button
            android:id="@+id/right_hand"
            android:layout_width="149dp"
            android:layout_height="68dp"
            android:layout_below="@+id/good_evening_textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="246dp"
            android:layout_marginLeft="246dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="271dp"
            android:background="@android:color/transparent"
            android:onClick="goToQuestionnaireByCategory"
            android:tag="Hand" />

        <Button
            android:id="@+id/spine_btn"
            android:layout_width="73dp"
            android:layout_height="83dp"
            android:layout_below="@+id/good_evening_textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="168dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="207dp"
            android:background="@android:color/transparent"
            android:onClick="goToQuestionnaireByCategory"
            android:tag="Spine" />

        <Button
            android:id="@+id/leg_btn"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:layout_below="@+id/good_evening_textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="159dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="187dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="6dp"
            android:background="@android:color/transparent"
            android:onClick="goToQuestionnaireByCategory"
            android:tag="Leg" />


        <Button
            android:id="@+id/left_hand_btn"
            android:layout_width="149dp"
            android:layout_height="68dp"
            android:layout_below="@+id/good_evening_textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="252dp"
            android:layout_marginBottom="270dp"
            android:background="@android:color/transparent"
            android:onClick="goToQuestionnaireByCategory"
            android:tag="Hand" />

        <Button
            android:id="@+id/periodic_questionnaire_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="287dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_system_button"
            android:gravity="center"
            android:onClick="goToLifeQualityQuestionnaire"
            android:tag="periodic"
            android:text="@string/periodic_questionnaire" />

        <Button
            android:id="@+id/daily_questionnaire_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="292dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/custom_system_button"
            android:gravity="center"
            android:onClick="goToDailyQuestionnaire"
            android:tag="daily"
            android:text="@string/daily_questionnaire" />

    </RelativeLayout>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_system_button"
        android:gravity="center"
        android:onClick="settingsFunction"
        android:text="@string/settings_title"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>